{
  "devDependencies": {
    "@helia/unixfs": "^1.3.0",
    "@koush/wrtc": "^0.5.3",
    "@libp2p/bootstrap": "^8.0.0",
    "@libp2p/mdns": "^8.0.0",
    "@libp2p/tcp": "^7.0.3",
    "@libp2p/webrtc": "^2.0.11",
